{#
/**
 * @file
 * Default theme implementation for a view template to display a list of rows.
 *
 * Available variables:
 * - attributes: HTML attributes for the container.
 * - rows: A list of rows.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's contents.
 * - title: The title of this group of rows. May be empty.
 *
 * @see template_preprocess_views_style_bt_list_group_panels()
 */
#}
{% import '@bt_list_group/templates/macros/_macros.html.twig' as macros %}

<div class="bt-list-group-panel {{ direction }}">
  <div class="row">

    {% if list_position == 'left' or list_position == 'top' %}
      {{ macros.render_list(rows, list_cols) }}
      {{ macros.render_panel(rows, panel_cols) }}
    {% else %}
      {{ macros.render_panel(rows, panel_cols) }}
      {{ macros.render_list(rows, list_cols) }}
    {% endif %}    


      
  </div>
</div>
